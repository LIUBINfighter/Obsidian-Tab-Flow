{
  "compilerOptions": {
    "baseUrl": "./src/",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
	  "ES2020"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "tests"
  ]
}
